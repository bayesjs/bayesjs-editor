{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2016",
    "jsx": "preserve",
    "paths": {
      "@json-templates/*": ["./__fixtures__/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@models/*": ["./src/models/*"],
      "@reducers/*": ["./src/reducers/*"],
      "@selectors/*": ["./src/selectors/*"],
      "@actions/*": ["./src/actions/*"],
      "@decorators/*": ["./src/decorators/*"],
      "@constants/*": ["./src/constants/*"],
      "@validations/*": ["./src/validations/*"],
      "@portals/*": ["./src/portals/*"],
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
